
@{
    ViewBag.Title = "DeleteConfirmed";
}

<h2>DeleteConfirmed</h2>

@model WebApplication4.Models.PropertyListing

@{
    ViewBag.Title = "Confirm Deletion";
}

<h2>Confirm Deletion</h2>

<div>
    <h4>Are you sure you want to delete this property listing?</h4>
    <div>
        <h3>@Model.Title</h3>
        <p>@Model.Description</p>
    </div>

    @using (Html.BeginForm("DeleteConfirmed", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("ViewPropertyListings")" class="btn btn-secondary">Cancel</a>
    }

</div>
