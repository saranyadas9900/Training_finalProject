@model WebApplication4.Models.PropertyListing

@{
    ViewBag.Title = "Delete Property Listing";
}


<div>
    <h4>Are you sure you want to delete this property listing?</h4>
    <div>
        <h3>@Model.Title</h3>
        <p>@Model.Description</p>
        <!-- Display other details if needed -->
    </div>

    @using (Html.BeginForm("DeleteConfirmed", "Agent", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id) <!-- Ensure this matches the parameter name in DeletePropertyListing -->
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("ViewOwnPropertyListings")" class="btn btn-secondary">Cancel</a>
    }
</div>
